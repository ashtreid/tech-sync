<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div
    {{#if blogs.length}}
    <div class="col-md-6 blog-list">
        <h3>Published Blogs:</h3>

        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
                <h6>Created on: {{format_date blog.date_created}}</h6>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js" type="text/javascript"></script>