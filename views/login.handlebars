<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">LOGIN</button>
      </div>
    </form>

    <div class="signup-box card card-rounded flex-column mt-5 align-center bg-light">
      <p class="mt-3 text-primary">Want to be part of the TechSync community? Sign up!</p>
      <button class="btn btn-primary" id="signup-btn">SIGN UP</button>
    </div>
  </div>


</div>

<script src="/js/login.js" type="text/javascript"></script>