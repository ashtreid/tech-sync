<div class="card">
  <header class="card-header">
    <h3 class="col p-6">Edit Post</h3>
    <form class="form edit-blog-form">
      <div class="form-group">
        <label for="blog-title">Title</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" />
      </div>
      <h6 class="col p-2" data-id="{{user.id}}">{{user.name}} | {{format_date date_created}}</h6>
  </header>
  <div class="form-group">
    <label for="blog-article">Article content</label>
    <textarea class="form-input card-body" id="blog-article" name="blog-article" value="{{article}}"></textarea>
  </div>
  {{!-- <p class="card-body">{{article}}</p> --}}
  </form>
  {{#if logged_in}}
  {{#if isAuthor}}
  <div class="card-footer">
    <button class="btn btn-sm btn-primary" data-id="{{id}}" id="update-btn"><a href="/"></a>UPDATE</button>
    <button class="btn btn-sm btn-danger" data-id="{{id}}" id="delete-btn">DELETE</button>
  </div>
  {{/if}}
  {{/if}}
</div>

<form class="card form new-comment-form">
  <h4 class="card-header">Leave a comment</h4>
  <div class="form-group">
    <div class="card-body">
      <input class="form-input form-input-squared" type="text" id="comment-box" name="comment-box" />
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-primary" data-id="{{id}}">COMMENT</button>
    </div>
  </div>

  <script src="/js/blog.js" type="text/javascript"></script>



