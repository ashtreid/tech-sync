<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a new article</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">Title</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <label for="blog-article">Article content</label>
                <textarea class="form-input" id="blog-article" name="blog-article"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">PUBLISH</button>
            </div>
        </form>
    </div>

    <script src="/js/article.js" type="text/javascript"></script>