{{#if logged_in}}
{{#if isAuthor}}
<div class="card">
  <header class="card-header">
    <h3 class="col p-6">Edit Post</h3>
  </header>
  <div class="card-body">
    <form class="form edit-blog-form">
      <div class="form-group">
        <label for="blog-title">Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-article">Article Content:</label>
        <textarea class="form-input" id="blog-article" name="blog-article">{{article}}</textarea>
      </div>
    </form>
  </div>
  <div class="card-footer">
    <button class="btn btn-sm btn-primary" data-id="{{id}}" id="update-btn">UPDATE</button>
    <button class="btn btn-sm btn-light" id="cancel-btn"><a href="/dashboard">CANCEL</a></button>
    <button class="btn btn-sm btn-danger" data-id="{{id}}" id="delete-btn">DELETE POST</button>
  </div>
</div>
{{else}}
<div class="card">
  <header class="card-header">
    <h3 class="col p-6">{{title}}</h3>
    <h6 class="col p-2" data-id="{{user.id}}">{{user.name}} | {{format_date date_created}}</h6>
  </header>
  <p class="card-body">{{article}}</p>
</div>
<div class="card mt-4">
  <h4 class="card-header">Leave a Comment</h4>
  <form class="card-body form new-comment-form">
    <div class="form-group">
      <label for="comment-box">Comment:</label>
      <input class="form-input" type="text" id="comment-box" name="comment-box" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" data-id="{{id}}" id="comment-btn">COMMENT</button>
    </div>
  </form>
</div>


{{/if}}
<button class="btn btn-sm btn-light" data-id="{{id}}" id="commentary-btn">VIEW COMMENTS</button>

{{#each comments as |comment|}}
<div class="card">
  <header class="card-header">
    <h3 class="col p-6"></h3>
    <h6 class="col p-2">{{comment.user.name}} | {{format_date comment.date_created}}</h6>
  </header>
  <p class="card-body">{{comment.content}}</p>

</div>
{{/each}}
{{/if}}



<script src="/js/blog.js" type="text/javascript"></script>