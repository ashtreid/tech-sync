{{#if logged_in}}
{{#if isAuthor}}
{{!-- read only post --}}
<div class="card" id="read-only-post">
  <header class="card-header">
    <h3 class="col p-6">{{title}}</h3>
    <h6 class="col p-2" data-id="{{user.id}}">{{user.name}} | {{format_date date_created}}</h6>
  </header>
  <p class="card-body">{{article}}</p>
  <div class="card-footer">
    <button class="btn btn-sm btn-light" data-id="{{id}}" id="edit-btn"><a href="/blog/update/{{id}}">EDIT</a></button>
  </div>
</div>

{{!-- open commenting--}}
<div class="card mt-4">
  <h4 class="card-header">Leave a Comment</h4>
  <form class="card-body form new-comment-form">
    <div class="form-group">
      <label for="comment-box">Comment:</label>
      <input class="form-input" type="text" id="comment-box" name="comment-box" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" data-id="{{id}}" id="comment-btn">COMMENT</button>
    </div>
  </form>
</div>

