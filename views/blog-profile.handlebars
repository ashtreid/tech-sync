<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            {{!-- <div class="form-group">
                <label for="blog-funding">needed funding ($):</label>
                <input class="form-input" type="number" id="blog-funding" name="blog-funding" />
            </div> --}}
            <div class="form-group">
                <label for="blog-article">article content:</label>
                <textarea class="form-input" id="blog-article" name="blog-article"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Publish</button>
            </div>
        </form>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 blog-list">
        <h3>Published Blogs:</h3>

        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/blog-profile.js" type="text/javascript"></script>